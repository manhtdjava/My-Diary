<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_gravity="start"
    >
       <LinearLayout
           android:id="@+id/ll1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/bg_colorapp_radius"
           android:layout_gravity="end"
           android:paddingVertical="7dp"
           android:paddingHorizontal="15dp"
           >
           <ImageView
               android:id="@+id/iv_rotate"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_gravity="center"
               android:src="@drawable/ic_rotate_photos"
               />

           <ImageView
               android:id="@+id/iv_zoom"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_zoom_photos"
               android:layout_marginHorizontal="13dp"
               />

           <ImageView
               android:id="@+id/iv_delete"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_delete_photos"/>
       </LinearLayout>
       <com.makeramen.roundedimageview.RoundedImageView
           android:id="@+id/ivMedia"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           app:riv_corner_radius="10dp"
           app:riv_border_width="2.5dp"
           app:riv_border_color="@color/color_FF7375"/>
</LinearLayout>