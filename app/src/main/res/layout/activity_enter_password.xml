<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poltawski_nowy_700"
            android:gravity="center"
            android:text="@string/password"
            android:textAllCaps="false"
            android:textColor="@color/color_373A3A"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_400"
            android:gravity="center"
            android:text="@string/please_enter_your_password"
            android:textAllCaps="false"
            android:textColor="#4A514F"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="34dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <TextView
                android:id="@+id/view_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_edt_password_no"
                android:paddingHorizontal="19dp"
                android:paddingVertical="15dp" />

            <TextView
                android:id="@+id/view_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_edt_password_no"
                android:paddingHorizontal="19dp"
                android:paddingVertical="15dp" />

            <TextView
                android:id="@+id/view_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_edt_password_no"
                android:paddingHorizontal="19dp"
                android:paddingVertical="15dp" />

            <TextView
                android:id="@+id/view_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_edt_password_no"
                android:paddingHorizontal="19dp"
                android:paddingVertical="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_2" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_4" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_5" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_7" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_8" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_x"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_x" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_0" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tv_next"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="17dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img_next" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/rethink_sans_400"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:textColor="#4A514F"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:id="@+id/include"
        layout="@layout/layout_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>