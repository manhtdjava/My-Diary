<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#5A5A5A</item>
        <item name="colorControlActivated">#FFF732</item>
    </style>


    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Màu nền chính -->
        <item name="colorPrimary">#FFB7B7</item>
        <item name="colorPrimaryDark">#FFB7B7</item>
        <item name="colorAccent">#FF7375</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/poltawski_nowy_500</item>
        <item name="fontFamily">@font/poltawski_nowy_500</item>

        <!-- Màu nền -->
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- Màu văn bản -->
        <item name="android:textColorPrimary">@color/color_373A3A</item>
        <item name="android:textColorSecondary">@color/color_373A3A</item>
    </style>


    <style name="monthText">
        <item name="android:fontFamily">@font/plus_jakarta_sans_700</item>
        <item name="android:textColor">@color/color_FF7375</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="weekText">
        <item name="android:fontFamily">@font/plus_jakarta_sans_700</item>
        <item name="android:textColor">@color/color_373A3A</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dateText">
        <item name="android:fontFamily">@font/plus_jakarta_sans_600</item>
        <item name="android:textColor">@color/color_373A3A</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>